    <script>
        const showCart = ()=>{
            fetch("/get-cart",{
                method: "GET",
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then((res)=>{
                if(res.status === 200){
                    window.location.href="/get-cart"
                }
            })
        }

        const showOrders = ()=>{
            fetch("/order/orders")
            .then((res)=>{
                if(res.status === 200){
                    window.location.href="/order/orders"
                }
            })
        }

        const logout=()=>{
            fetch("/auth/logout",{
                method: "GET",
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then((res)=>{
                if(res.status === 200){
                    window.location.href="/auth/signin"
                }
            })
        }
    </script>
